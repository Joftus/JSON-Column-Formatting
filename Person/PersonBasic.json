{
  "$schema": "http://columnformatting.sharepointpnp.com/columnFormattingSchema.json",
  "debugMode": true,
  "elmType": "div",
  "style": {
    "min-height": "1.5em",
    "flex-direction": "column",
    "align-items": "start"
  },
  "children": [
    {
      "elmType": "div",
      "forEach": "person in @currentField",
      "style": {
        "justify-content": "center",
        "margin-top": "=if(loopIndex('person') == 0, '0', '1em')"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "display": "flex",
            "flex-direction": "row",
            "justify-content": "center",
            "align-items": "center",
            "padding": "8px 8px 8px 0"
          },
          "children": [
            {
              "elmType": "img",
              "attributes": {
                "src": "=getUserImage(@currentField.email, 'S')"
              },
              "style": {
                "width": "auto",
                "height": "auto",
                "border-radius": "3em",
                "margin-right": "6px"
              }
            },
            {
              "elmType": "div",
              "style": {
                "margin-left": "0.5em"
              },
              "children": [
                {
                  "elmType": "div",
                  "style": {
                    "display": "flex",
                    "width": " 100%",
                    "overflow": " hidden",
                    "text-overflow": " ellipsis",
                    "align-items": "center",
                    "padding-bottom": "8px",
                    "font-size": "1.2em"
                  },
                  "children": [
                    {
                      "elmType": "div",
                      "txtContent": "@currentField.title",
                      "style": {
                        "padding-right": "6px"
                      }
                    },
                    {
                      "elmType": "a",
                      "style": {
                        "text-decoration": "none"
                      },
                      "attributes": {
                        "iconName": "Mail",
                        "class": "sp-field-quickActions",
                        "href": {
                          "operator": "+",
                          "operands": [
                            "mailto:",
                            "@currentField.email",
                            "?subject=Contract Request&body=\n",
                            "[$ID]"
                          ]
                        }
                      }
                    }
                  ]
                },
                {
                  "elmType": "div",
                  "txtContent": "@currentField.jobTitle",
                  "style": {
                    "color": "gray"
                  }
                },
                {
                  "elmType": "div",
                  "txtContent": "@currentField.department",
                  "style": {
                    "color": "gray"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}